@page
@model WebBurgers.Pages.PurchaseMaterials.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Закупка сырья</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="PurchaseMaterial.Material" class="control-label"></label>
                <select asp-for="PurchaseMaterial.Material" class ="form-control" asp-items="ViewBag.Material"></select>
            </div>
            <div class="form-group">
                <label asp-for="PurchaseMaterial.Count" class="control-label"></label>
                <input asp-for="PurchaseMaterial.Count" class="form-control" />
                
            </div>
            <div class="form-group">
                <label asp-for="PurchaseMaterial.Summa" class="control-label"></label>
                <input asp-for="PurchaseMaterial.Summa" class="form-control" />
                @if(TempData["Message"] != null){
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                      <strong>Не достаточно бюджета!</strong> Стоимость сырья не должна превышать количество бюджета.
                      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            </div>
            <div class="form-group">
                <label asp-for="PurchaseMaterial.Date" class="control-label"></label>
                <input asp-for="PurchaseMaterial.Date" class="form-control" />
                
            </div>
            <div class="form-group">
                <label asp-for="PurchaseMaterial.Employee" class="control-label"></label>
                <select asp-for="PurchaseMaterial.Employee" class ="form-control" asp-items="ViewBag.Employee"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Купить" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a class="btn btn-dark" asp-page="Index">Назад</a>
</div>

