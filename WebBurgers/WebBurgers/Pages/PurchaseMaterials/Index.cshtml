@page
@model WebBurgers.Pages.PurchaseMaterials.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Закупка сырья</h1>

<br />
<p>
    <a asp-page="Create" class="btn btn-success">Купить сырье</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th class="col">
                Material
            </th >
            <th class="col">
                Count
            </th>
            <th class="col">
               Summa
            </th>
            <th class="col">
                Date
            </th>
            <th class="col">
                Employee
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@while (Model.reader.Read()) {
        <tr>
                    <td class="col">
                @Model.reader.GetString(1)
            </td>
                    <td class="col">
                @Model.reader.GetDecimal(2)
            </td >
                    <td class="col">
                @Model.reader.GetDecimal(3)
            </td>
                    <td class="col">
                @Model.reader.GetSqlDateTime(4)       
            </td>
                <td class="col">
                        @Model.reader.GetString(5)
                </td>
                <td class="col">
                        <a asp-page="./Edit" asp-route-id="@Model.reader.GetInt32(0)" class="btn btn-sm btn-outline-dark">Изменить</a>
                </td>
                <td class="col">
                    <form method="post">
                        <input type="hidden" name="id" value="@Model.reader.GetInt32(0)" />
                        <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                    </form>
                </td>
        </tr>
}
        @{
            Model.reader.Close();
        }
    </tbody>
</table>
</div>