@page
@model WebBurgers.Pages.Materials.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Добавление</h1>

<h4>Сырье</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Material.Name" class="control-label"></label>
                <input asp-for="Material.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Material.Unit" class="control-label"></label>
                <select asp-for="Material.Unit" class ="form-control" asp-items="ViewBag.Unit"></select>
            </div>
            <div class="form-group">
                <label asp-for="Material.Count" class="control-label"></label>
                <input asp-for="Material.Count" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Material.Summa" class="control-label"></label>
                <input asp-for="Material.Summa" class="form-control" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a class="btn btn-dark" asp-page="Index">Назад</a>
</div>

