@page
@model WebBurgers.Pages.Ingredients.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Добавление</h1>

<h4>Ингредиенты</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label class="control-label">Product</label>
                <select name="product" class ="form-control" asp-items="ViewBag.Product" itemid="@Model.pId"></select>
            </div>
            <div class="form-group">
                <label  class="control-label">Material</label>
                <select name="material" class ="form-control" asp-items="ViewBag.Material"></select>
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <strong>Такой ингредиент уже существует!</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            </div>
            <div class="form-group">
                <label class="control-label">Count</label>
                <input name="count" class="form-control" value="0"/>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a class="btn btn-dark" asp-page="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
