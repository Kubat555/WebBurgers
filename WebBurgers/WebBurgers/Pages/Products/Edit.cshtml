@page "/Products/Edit/{id:int}"
@model WebBurgers.Pages.Products.EditModel
@{

}
<form method="post">
    <div class="form-group">
        <label for="ID">ID</label>
        <input type="number" class="form-control" id="ID" name="ID" value="@Model.ID" />
    </div>
    <div class="form-group">
        <label for="productName">Product name</label>
        <input type="text" class="form-control" id="productName" name="ProductName" value="@Model.productName" />
    </div>
    <div class="form-group">
        <label for="unit">Unit</label>
        <select asp-for="@Model.unit" asp-items="@Model.Units" class="form-control"></select>
    </div>
    <div class="form-group">
        <label for="count">Count</label>
        <input class="form-control" id="count" name="Count" value="@Model.count" />
    </div>
    <div class="form-group">
        <label for="summa">Summa</label>
        <input  class="form-control" id="summa" name="Summa" value="@Model.summa" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>